<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TestSuite" parallel="false">

    <!-- Swag Labs Login Tests -->
    <test name="LoginTests">
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <!-- Cross Browser Suite -->
    <test name="ChromeTest">
        <parameter name="framework" value="selenide"/>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.FunDayPageTests"/>
        </classes>
    </test>

    <test name="BooksTest_Selenide">
        <parameter name="framework" value="selenide"/>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Tests.BookTests"/>
        </classes>
    </test>

    <test name="BooksTest_Playwright">
        <parameter name="framework" value="playwright"/>
        <parameter name="browser" value="chromium"/>
        <classes>
            <class name="Tests.BookTests"/>
        </classes>
    </test>

    <test name="EdgeTest">
        <parameter name="framework" value="playwright"/>
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.FunDayPageTests"/>
        </classes>
    </test>

</suite>
